package repeticoes;

public class repeticoes {
	public static void main(String[] args) {
		
		int numero = 8;
		int contador = 0;
		int resultado;
		
		while(contador <= 10) {
			
			resultado = numero * contador;
			
			System.out.println(numero + " * " + contador + " = " + resultado);
			
			contador++;
		}
		
		System.out.println("");
		
		for(int i=0; i<=10; i++) {
			resultado = numero * i;
			System.out.println(numero + " * " + i + " = " + resultado);
		}
	}
}
